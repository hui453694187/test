<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialog_common" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>
    <!-- 继承系统默认的对话框样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">

        <!-- 去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--
        对话框的动画样式
    	<item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        -->
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊，默认为true -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <!-- 后背景的暗淡度 -->
    </style>

    <style name="Btn">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <!-- 相册勾选 -->
    <style name="CheckBoxStyle">
        <item name="android:layout_width">28.0dip</item>
        <item name="android:layout_height">28.0dip</item>
        <item name="android:layout_marginRight">20.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="video_detail_player_bottom_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="video_detail_player">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>