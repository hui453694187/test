<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/task_list_view_bg"
    android:orientation="vertical"
    android:padding="5dip" >

    <com.iiseeuu.asyncimage.widget.AsyncImageView
        android:id="@+id/log_item_img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/log_bg_black" />

    <TextView
        android:id="@+id/log_item_tips"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="A"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/log_item_img"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/log_item_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:singleLine="true"
                android:text="日志类型"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/log_item_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:padding="2dp"
                android:singleLine="true"
                android:text="下午 16:45"
                android:textColor="#9A9A9A"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/log_item_concent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@id/l2"
            android:padding="1dp"
            android:text="日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日志日
志"
            android:textColor="#9A9A9A"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>