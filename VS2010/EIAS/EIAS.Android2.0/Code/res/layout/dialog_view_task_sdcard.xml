<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dialog_checksdcard_margin"
    android:background="@drawable/dialog_view_ckecksdcard"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dialog_checksdcard_margin" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_checksdcard_margin"
        android:gravity="center_horizontal"
        android:text="系统存储空间不足，请清理后再继续操作"
        android:textColor="@color/lanse"
        android:textSize="@dimen/text_size_h7" />

    <ProgressBar
        android:id="@+id/dialog_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="@dimen/dialog_checksdcard_margin"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progressbar" />

    <Button
        android:id="@+id/dialog_check"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dialog_checksdcard_margin"
        android:background="@drawable/btn_operat"
        android:text="知道了"
        android:textColor="#ffffff" />

</LinearLayout>