<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:layout_alignParentBottom="true"
    android:background="@color/main_menu_bg"
    android:baselineAligned="false"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="5.0" >

    
    <ImageButton
            android:id="@+id/camera_header_btn_back"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="fill_parent"
            android:background="@drawable/btn_camera_back_status"
            android:src="@drawable/main_header_btn_back_bg" />
    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:visibility="gone" >

        <com.yunfang.framework.view.album.FilterImageView
            android:id="@+id/btn_thumbnail"
            android:layout_width="@dimen/thumbnail_imageview_size"
            android:layout_height="@dimen/thumbnail_imageview_size"
            android:layout_gravity="center"
            android:background="@drawable/camera_thumbnail_bg"
            android:contentDescription="@string/app_name"
            android:padding="0.5dip"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/videoicon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/camera_btn_play_vedio" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/btn_shutter_record"
            android:layout_width="@dimen/shutter_bottom_size"
            android:layout_height="@dimen/shutter_bottom_size"
            android:background="@drawable/camera_btn_shutter_record"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/btn_shutter_camera"
            android:layout_width="@dimen/shutter_bottom_size"
            android:layout_height="@dimen/shutter_bottom_size"
            android:background="@drawable/camera_btn_shutter_camera"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/btn_switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera_switcher_menu_indicator"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/camera_switch_camera" />
    </RelativeLayout>

</LinearLayout>