<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dialog_checksdcard_margin"
    android:background="@drawable/bg_title_round_gray"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_bg_title"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_view_task_result_title"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_title_round_blue"
            android:gravity="center"
            android:text="任务"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_h7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/dialog_view_task_result_list"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:cacheColorHint="@android:color/transparent"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:focusable="true"
            android:scrollbarFadeDuration="0"
            android:scrollingCache="false" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_view_task_result_confirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="1dip"
            android:background="@drawable/btn_orange_round_corner"
            android:gravity="center"
            android:text="导出"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_view_task_result_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="1dip"
            android:background="@drawable/btn_orange_round_corner"
            android:gravity="center"
            android:text="知道了"
            android:textColor="#ffffff"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>