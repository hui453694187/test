<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view_about_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/home_title"
        layout="@layout/app_title_layout" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/app_name_ch"
            android:src="@drawable/yunfang_logo" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_view_about_root_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name_ch"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/dialog_tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/app_version"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_view_about_root_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="@string/app_describe1"
        android:textColor="@android:color/background_dark"
        android:textSize="16dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="@string/app_describe2"
        android:textColor="@android:color/background_dark"
        android:textSize="16dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="联系邮箱 : "
            android:textColor="@android:color/background_dark"
            android:textSize="16dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:autoLink="email"
            android:linksClickable="true"
            android:text="@string/about_email"
            android:textColor="@android:color/background_dark"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="官网 : "
            android:textColor="@android:color/background_dark"
            android:textSize="16dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/about_url"
            android:textColor="@android:color/background_dark"
            android:textSize="16dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_tv_version1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:layout_margin="10dip"
        android:text="@string/app_copyright"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#5B5B5B"
        android:textSize="14dip" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_pop_bg"
        android:padding="9dp"
        android:text="知道了"
        android:textColor="@android:color/white" />

</LinearLayout>