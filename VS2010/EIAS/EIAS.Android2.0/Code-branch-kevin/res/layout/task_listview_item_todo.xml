<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/task_list_view_bg"
    android:orientation="vertical"
    android:padding="6dp" >

    <LinearLayout
        android:id="@+id/lltp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/status_Txt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:text="紧"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_h9" />

        <TextView
            android:id="@+id/TaskNum_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_h8" />

        <TextView
            android:id="@+id/RAName_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_h8" />
    </LinearLayout>

    <TextView
        android:id="@+id/TargetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="任务编号和任务地址"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_h7" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/text_size_h8" >

        <TextView
            android:id="@+id/deliveryTime_string"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/deliveryTime_string"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/createtime_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#999999" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_urgent_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl5"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/ll12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/urgentFee_string"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/urgent_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/liveSearchCharge_string"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/liveSearchCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>